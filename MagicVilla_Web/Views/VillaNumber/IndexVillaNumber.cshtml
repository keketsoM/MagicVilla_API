@model IEnumerable<VillaNumberDto>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">VillaNumber List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New VillaNumber</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    VillaNumber
                </th>
                
                <th>

                </th>
            </tr>

        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Villa.Name
                    </td>
                    <td>
                        @item.VillaNo
                    </td>
                    
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-id="@item.VillaNo" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i>Update</a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-id="@item.VillaNo" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>

    </table>
</div>