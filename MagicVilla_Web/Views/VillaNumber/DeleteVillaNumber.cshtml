@model VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <div class="row">
             <input asp-for="VillaNumber.VillaNo" hidden />
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" disabled class="form-select" asp-items="@Model.villaList">
                    <option disabled selected>--select Villa--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.SpecialDetails" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <button asp-controller="VillaNumber" asp-action="DeleteVillaNumber" type="submit" class="btn btn-success form-control">Delete</button>
            </div>
        </div>
    </div>
</form>


