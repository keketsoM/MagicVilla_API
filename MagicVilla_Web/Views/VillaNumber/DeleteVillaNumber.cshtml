@model VillaNumberDto

<form asp-action="DeleteVilla" >
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="VillaId" hidden class="form-control"></input>
            <div class="col-2">
                <label asp-for="VillaNo" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" disabled class="form-control" />
               
            </div>
            <div class="col-2">
                <label asp-for="SpecialDetails"  class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SpecialDetails" disabled class="form-control" />
                
            </div>
          
            <div class="col-5 offset-2">
                <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-success form-control">Delete</a>
            </div>
        </div>
    </div>
</form>


