@model VillaNumberCreateVM

<form asp-action="CreateVillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.villaList">
                    <option disabled selected>--select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" ></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>
           
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input asp-action="CreateVillaNumber" type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
